{
  "bf16": {
    "enabled": true
  },
  "train_batch_size": 64,
  "gradient_accumulation_steps": 1,
  "zero_optimization": {
    "stage": 3,
    "reduce_bucket_size": 50000000,
    "stage3_param_persistence_threshold": 100000,
    "stage3_prefetch_bucket_size": 50000000
  },
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.0002,
      "betas": [
        0.9,
        0.95
      ],
      "eps": 1e-08,
      "weight_decay": 0.01
    }
  }
}
